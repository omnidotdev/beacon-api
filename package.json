{
  "name": "@omnidotdev/beacon-api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build --target node --outdir build src/server.ts",
    "start": "bun drizzle-kit migrate --config src/lib/config/drizzle.config.ts && bun run build/server.js",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check",
    "db:generate": "bun --env-file .env.local drizzle-kit generate --config src/lib/config/drizzle.config.ts",
    "db:migrate": "bun --env-file .env.local drizzle-kit migrate --config src/lib/config/drizzle.config.ts",
    "db:push": "bun --env-file .env.local drizzle-kit push --config src/lib/config/drizzle.config.ts",
    "db:studio": "bun --env-file .env.local drizzle-kit studio --config src/lib/config/drizzle.config.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/graphql-yoga": "^1.4.0",
    "@graphql-yoga/plugin-disable-introspection": "^2.19.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.21",
    "elysia-rate-limit": "^4.5.0",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "unleash-client": "^6.9.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
